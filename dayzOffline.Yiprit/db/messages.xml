<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<messages>
<!--
See https://community.bistudio.com/wiki/DayZ:Server_Messages for more information

Example messages:

1) following message will be displayed to every player in countdown manner
    and shuts down server in 6 hours from its start
-->

    <message>
        <deadline>360</deadline>
        <shutdown>1</shutdown>
        <text>#name will shutdown in #tmin minutes.</text>
    </message>

<!--
2) following message will be displayed every 45 minutes to every player
-->
    <message>
        <repeat>45</repeat>
        <text>You're playing on Yiprit. Thank you</text>
    </message>

<!--
3) following message will be displayed every 50/55 minutes to every player
    and 10/5 minutes after player connect
-->
    <message>
        <delay>10</delay>
        <repeat>50</repeat>
        <onconnect>1</onconnect>
        <text>Check our Discord</text>
    </message>
	
    <message>
        <delay>5</delay>
        <repeat>30</repeat>
        <onconnect>1</onconnect>
        <text>Press B for important server info</text>
    </message>
	
    <message>
        <delay>5</delay>
        <repeat>40</repeat>
        <onconnect>1</onconnect>
        <text>This is a PVE/PVP Server</text>
    </message>

<!--
4) following message will be displayed once
    and 2 minutes after player connect
-->
    <message>
        <delay>2</delay>
        <onconnect>1</onconnect>
        <text>Welcome to Yiprit</text>
    </message>


</messages>